# Configuración del servidor
PORT=3300
NODE_ENV=development

# Base de datos
MONGODB_URI=mongodb://localhost:27017/necesitomasreviews

# JWT
JWT_SECRET=generate_a_secure_random_string_here
JWT_EXPIRES_IN=7d

# Email - Configuración para GoDaddy Email
EMAIL_HOST=smtp.godaddy.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_secure_password
EMAIL_FROM=your_email@example.com

# PayPal (Credenciales de Sandbox para desarrollo)
PAYPAL_CLIENT_ID=your_sandbox_client_id
PAYPAL_CLIENT_SECRET=your_sandbox_client_secret
PAYPAL_MODE=sandbox

# WebPay Plus (Credenciales de prueba)
WEBPAY_COMMERCE_CODE=your_webpay_commerce_code
WEBPAY_API_KEY=your_webpay_api_key
WEBPAY_MODE=development

# MercadoPago (Credenciales de prueba)
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_test_token
MERCADOPAGO_MODE=sandbox

# Cliente
CLIENT_URL=http://localhost:5300

# CORS - Puede ser una lista separada por comas
CORS_ORIGIN=http://localhost:5300,http://localhost:5301

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Seguridad
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos en milisegundos
RATE_LIMIT_MAX=100
SESSION_SECRET=generate_another_secure_random_string_here